{
  "profiles": {
    "asus-tuf-dash-f15": {
      "name": "ASUS TUF Dash F15",
      "detection": {
        "dmi_product_name": "*TUF*Dash*F15*",
        "dmi_board_name": "*TUF*"
      },
      "gpu": "nvidia",
      "features": ["mux_switch", "optimus", "rgb_keyboard"],
      "packages": {
        "arch": [
          "nvidia-dkms",
          "nvidia-utils",
          "optimus-manager",
          "asusctl",
          "supergfxctl"
        ],
        "ubuntu": [
          "nvidia-driver-535"
        ]
      },
      "configs": {
        "nvidia_modeset": true,
        "nvidia_drm_fbdev": true,
        "optimus_switching": "bbswitch",
        "keyboard_backlight": true
      },
      "services": {
        "optional": ["optimus-manager", "supergfxd", "asusd"]
      }
    },
    "generic-nvidia": {
      "name": "Generic NVIDIA GPU",
      "detection": {
        "lspci_gpu": "*nvidia*"
      },
      "gpu": "nvidia",
      "features": ["nvidia_drivers"],
      "packages": {
        "arch": [
          "nvidia-dkms",
          "nvidia-utils",
          "lib32-nvidia-utils"
        ],
        "ubuntu": [
          "nvidia-driver-535",
          "nvidia-settings"
        ]
      },
      "configs": {
        "nvidia_modeset": true,
        "nvidia_drm_fbdev": true
      }
    },
    "generic-amd": {
      "name": "Generic AMD GPU",
      "detection": {
        "lspci_gpu": "*amd*"
      },
      "gpu": "amd",
      "features": ["amd_drivers"],
      "packages": {
        "arch": [
          "mesa",
          "lib32-mesa",
          "vulkan-radeon",
          "lib32-vulkan-radeon"
        ],
        "ubuntu": [
          "mesa-vulkan-drivers",
          "libvulkan1"
        ]
      },
      "configs": {
        "amd_gpu_acceleration": true
      }
    },
    "generic-intel": {
      "name": "Generic Intel GPU",
      "detection": {
        "lspci_gpu": "*intel*"
      },
      "gpu": "intel",
      "features": ["intel_drivers"],
      "packages": {
        "arch": [
          "mesa",
          "lib32-mesa",
          "vulkan-intel",
          "lib32-vulkan-intel"
        ],
        "ubuntu": [
          "mesa-vulkan-drivers",
          "intel-media-va-driver"
        ]
      },
      "configs": {
        "intel_gpu_acceleration": true
      }
    },
    "virtual-machine": {
      "name": "Virtual Machine",
      "detection": {
        "systemd_detect_virt": true,
        "dmi_product_name": "*virtualbox*|*vmware*|*qemu*"
      },
      "gpu": "virtual",
      "features": ["vm_optimizations"],
      "packages": {
        "arch": [
          "qemu-guest-agent",
          "spice-vdagent"
        ],
        "ubuntu": [
          "qemu-guest-agent",
          "spice-vdagent"
        ]
      },
      "configs": {
        "skip_hardware_configs": true,
        "vm_optimizations": true
      },
      "services": {
        "required": ["qemu-guest-agent"]
      }
    }
  }
}